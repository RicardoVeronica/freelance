---
// background images
// positon relative and absolute for transparency
// center items with flexbox
---

<section class="hero">
  <div class="hero__content">
    <h2>LAMP Stack Web Developer</h2>

    <div class="hero__icontext">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-map-2"
        width="80"
        height="80"
        viewBox="0 0 24 24"
        stroke-width="1"
        stroke="#ffec00"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M12 18.5l-3 -1.5l-6 3v-13l6 -3l6 3l6 -3v7.5"></path>
        <path d="M9 4v13"></path>
        <path d="M15 7v5.5"></path>
        <path
          d="M21.121 20.121a3 3 0 1 0 -4.242 0c.418 .419 1.125 1.045 2.121 1.879c1.051 -.89 1.759 -1.516 2.121 -1.879z"
        ></path>
        <path d="M19 18v.01"></path>
      </svg>

      <p>Guadalajara, Jalisco</p>
    </div>

    <a href="#">Contact</a>
  </div>
</section>

<style>
  .hero {
    position: relative;

    height: 45rem;

    /* background imag correctly */
    background-image: url("../../public/portfolio.webp");
    background-repeat: no-repeat;
    background-size: cover;
  }

  .hero__content {
    position: absolute;

    /* bottom: 0; */
    /* left: 0; */
    /* top: 0; */
    /* right: 0; */
    /* background-color: rgba(0, 0, 0, .7); */

    /* backgrond transparency */
    width: 100%;
    height: 100%;
    background-color: rgb(0 0 0 / 70%); /* new syntax */

    /* center items */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .hero__content h2,
  .hero__content p {
    color: var(--white);
  }

  .hero__icontext {
    display: flex;
    align-items: center;
  }
</style>
